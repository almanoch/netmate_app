<% provide(:title, @user.name) %>
<div class="row">
	<aside class="span4">
		<section>
           <h1>
	          <%= gravatar_for @user %>
	          <%= @user.name %>
           </h1>
        </section>
        <section>
        	<%= render 'shared/stats' %>
        </section>
    </aside> 
    <div class="span8">
      <%= render 'follow_form' if signed_in? %>
      <% if @user.micromessages.any? %>
    	<h3>Micromessages (<%= @user.micromessages.count %>)</h3>
    	<ol class="micromessages">
    		<%= render @micromessages %>
    	</ol>
    	<%= will_paginate @micromessages %>
      <% end %>
    </div>   
</div>
