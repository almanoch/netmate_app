<% if signed_in? %>
  <div class="row">
  	<aside class="span4">
  		<section>
  			<%= render 'shared/user_info' %>
  		</section>
  		<section>
  			<%= render 'shared/micromessage_form' %>
  		</section>
  	</aside>
  	<div class="span8">
  		<h3>Micromessage Feed</h3>
  		<%= render 'shared/feed' %>
  	</div>
  </div>
<% else %>  
  <div class="center hero-unit">
    <h1>Welcome to the Netmate</h1>
  
    <h2>
	  This is home page for the Social Site
	  <a href="http://netmate.com">Netmate</a>.
    </h2>
  
    <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
  </div>

  <%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org' %>
<% end %>
